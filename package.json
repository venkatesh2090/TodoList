{
  "name": "express-example",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm-run-all build prod",
    "transpile": "babel ./server --out-dir dist-server",
    "clean": "rm -rf ./dist-server",
    "dev": "NODE_ENV=development node ./dist-server/bin/www.js",
    "prod": "NODE_ENV=production node ./dist-server/bin/www.js",
    "build": "npm-run-all clean transpile",
    "start-dev": "npm-run-all build dev"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "pg-promise": "^10.5.6",
    "pug": "2.0.0-beta11"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "core-js": "^3.6.5",
    "regenerator-runtime": "^0.13.5"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry",
          "corejs": 3
        }
      ]
    ]
  },
  "nodemonConfig": {
    "exec": "npm run start-dev",
    "watch": [
      "server/*",
      "public/*",
      "views/*"
    ]
  }
}
