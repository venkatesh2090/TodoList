{
  "name": "express-example",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "transpile": "babel ./server --out-dir dist-server",
    "clean": "rm -rf ./dist-server",
    "dev": "NODE_ENV=development node ./dist-server/bin/www.js",
    "start": "NODE_ENV=production node ./dist-server/bin/www.js",
    "build": "npm-run-all clean transpile",
    "start-dev": "npm-run-all build dev",
    "webpack-build": "webpack"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "~1.4.4",
    "cookie-session": "^1.4.0",
    "core-js": "^3.6.5",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "keygrip": "^1.1.0",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "pg-promise": "^10.5.6",
    "pug": "^3.0.0",
    "regenerator-runtime": "^0.13.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "apply-loader": "^2.0.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.6.0",
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^4.3.0",
    "pug-loader": "^2.4.0",
    "style-loader": "^1.2.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry",
          "corejs": 3
        }
      ]
    ]
  },
  "nodemonConfig": {
    "exec": "npm run start-dev",
    "watch": [
      "server/*",
      "public/*",
      "views/*"
    ],
    "ext": "js,json,css,html,pug"
  }
}
